# MCP Superstack Configuration
# Copy this file to .env and fill in your values

# ============================================
# Essential Services
# ============================================

# Polydev - Multi-model AI perspectives
# Get from: https://www.polydev.ai/dashboard/mcp-tokens
POLYDEV_USER_TOKEN=

# Exa - Semantic web search
# Get from: https://exa.ai/
EXA_API_KEY=

# GitHub - Repository management
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=

# ============================================
# Supabase - PostgreSQL Database
# ============================================
# Get from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_ACCESS_TOKEN=
SUPABASE_PROJECT_REF=
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ============================================
# Infrastructure Services
# ============================================

# Vercel - Deployment
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=
VERCEL_TEAM=
VERCEL_PROJECT=

# Stripe - Payments
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_API_KEY=

# Resend - Email
# Get from: https://resend.com/api-keys
RESEND_API_KEY=

# ============================================
# Cache & Storage
# ============================================

# Upstash Redis
# Get from: https://console.upstash.com/
UPSTASH_EMAIL=
UPSTASH_API_KEY=

# ============================================
# Additional AI Services
# ============================================

# Perplexity - AI-powered search
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# ============================================
# Filesystem Access
# ============================================
# Directory that the filesystem MCP server can access
ALLOWED_DIRECTORY=/Users/YOUR_USERNAME/Documents
